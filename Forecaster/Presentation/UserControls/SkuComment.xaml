<UserControl x:Class="daisybrand.forecaster.Presentation.UserControls.SkuComment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Converters="clr-namespace:daisybrand.forecaster.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Converters:SkusCommentConverter x:Key="CommentConverter" />
        
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>            
        </Grid.RowDefinitions>
        <TextBox x:Name="COMMENT" Grid.Column="0" Background="Yellow"
                 Text="{Binding SKUID, Converter={StaticResource CommentConverter}, Mode=OneWay}" MaxLength="150"/>
        <Button x:Name="SKU_COMMENT_OK"
                Click="SKU_COMMENT_OK_Click"
                CommandParameter="{Binding SKUID}"
                Grid.Column="1" Content="Save" />
    </Grid>
</UserControl>
