        <Converter:WeeklyDetailConverter x:Key="WeeklyDetailConverter" />
        <Converter:FocusedDataConverter x:Key="FocusedDataConverter" />
        <Converter:CellBackgroundConverter x:Key="CellBackgroundCenverter" color="{StaticResource coral}" />
        <Converter:ToolTipVisibilityConverter x:Key="ToolTipVisibilityConverter" />
        <Converter:ToolTipEnableConverter x:Key="ToolTipEnableConverter" />
        <Converter:TextUpperCaseConverter x:Key="TextUpperCaseConverter" />
        <Converter:FirstPerfomanceConverter x:Key="FirstPerformanceConverter" />
        <Converter:RowBackgroundConverter x:Key="RowBackgroundConverter" />
        <Converter:CommaDelimetedConverter x:Key="CommaDelimetedConverter" />
        <Converter:HolidayCellBackgroundConverter x:Key="HolidayBackgroundConverter" />
        <Converter:ForecastLastValueConverter x:Key="ForecastLastValueConverter" />
        <Converter:IsValueZeroConverter x:Key="IsValueZeroConverter" />
        <Style x:Key="NumberToRight" TargetType="{x:Type Border}">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Style.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Padding" Value="0,0,3,0" />
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text}" Value="0" />
                                <Condition Binding="{Binding Path=Data.IS_FUTURE}" Value="true" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Foreground" Value="Transparent" />
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="BackgroundStyle"
               BasedOn="{StaticResource {dxgt:GridRowThemeKey ResourceKey=RowStyle}}"
               TargetType="{x:Type dxg:GridRowContent}">
            <Setter Property="Background" Value="{Binding Path=DataContext.PERFORMANCES, Converter={StaticResource RowBackgroundConverter}}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsSelected}" Value="True">
                    <Setter Property="BorderThickness" Value="8" />
                    <Setter Property="BorderBrush" Value="Red" />
                    <!--<Setter Property="Background"
                            Value="Orange" />-->
                    <!--<DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 Duration="00:00:0.8"
                                                 From="0.0"
                                                 To="1.0" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>-->
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="FocusedCellCustomStyle" TargetType="{x:Type dxg:GridCellContentPresenter}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Opacity" Value=".7" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="columnTextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="SelectedRowStyle" TargetType="{x:Type dxg:GridRowContent}">
            <Style.Resources>
                <Style BasedOn="{StaticResource columnTextBlock}" TargetType="{x:Type TextBlock}" />
            </Style.Resources>
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsSelected}" Value="True">
                    <Setter Property="Background" Value="Gray" />
                    <Setter Property="Foreground" Value="White" />
                </DataTrigger>
                <Trigger Property="dxg:GridViewBase.IsFocusedRow" Value="True">
                    <Setter Property="Background" Value="#CC9900" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
