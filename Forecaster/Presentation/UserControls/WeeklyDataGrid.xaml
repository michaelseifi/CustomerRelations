                    <StackPanel x:Name="root"
                                Background="#00FFFFFF"
                                Orientation="Horizontal">
                        <TextBlock x:Name="numberPresenter"
                                   Margin="2"
                                   Text="{Binding Path=DataContext.RowNumber}" />
                        <ContentPresenter x:Name="iconPresenter"
                                          Content="{x:Null}"
                                          IsHitTestVisible="False" />
                    </StackPanel>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=IndicatorState}" Value="Focused">
                            <Setter TargetName="root" Property="StackPanel.Background" Value="White" />
                            <Setter TargetName="numberPresenter" Property="TextBlock.Text" Value="{x:Null}" />
                            <Setter TargetName="iconPresenter" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Image Width="20"
                                               Height="20"
                                               Source="{StaticResource statistic}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <!--  Value="{DynamicResource {dxgt:RowIndicatorThemeKey ResourceKey=FocusedIconTemplate}}"  -->
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
